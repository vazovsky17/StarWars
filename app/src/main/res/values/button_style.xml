<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAppearance">@style/Font.Body_1</item>
        <item name="textAllCaps">false</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:colorForeground">@color/whiteParakeet</item>
        <item name="background">@color/blackAlienWare</item>
    </style>

    <style name="ButtonStyle.Additional" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>