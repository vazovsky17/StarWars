<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <item name="colorOnError">@color/white</item>
        <item name="colorError">@color/folly</item>

        <item name="android:colorBackground">@color/hanPurple</item>
        <item name="android:textColor">@color/white</item>
        <item name="errorSnackbarBackgroundColor">@color/folly</item>
        <item name="infoSnackbarBackgroundColor">@color/frenchSkyBlue</item>
    </style>
</resources>